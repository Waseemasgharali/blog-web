<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Code Blog</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="nav container">
      <h1>Code Blog</h1>
      <div class="nav-right">
        <% if (loggedIn) { %>
        <a href="/logout">Logout</a>
        <% } else { %>
        <a href="/login">Login</a>
        <% } %>
        <a href="/add_post">Add Post</a>
      </div>
    </div>
    <!-- Update index.ejs to include delete button -->
    <ul class="post-container container">
      <% posts.forEach(post => { %>
      <li class="post">
        <% if (post.image) { %>
        <img src="<%= post.image %>" alt="<%= post.title %> image" />
        <% } %>
        <h2><%= post.title %></h2>
        <p><%- post.content %></p>
        <!-- Add delete button -->
        <form action="/delete_post/<%= post.id %>" method="post">
          <input type="submit" value="Delete" />
        </form>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
