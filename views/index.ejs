<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Code Blog</title>
  </head>
  <body>
    <h1>Code Blog</h1>
    <ul>
      <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <% if (post.image) { %>
        <img src="<%= post.image %>" alt="<%= post.title %> image" />
        <% } %>
      </li>
      <% }); %>
    </ul>
    <a href="/add_post">Add Post</a>
  </body>
</html>
